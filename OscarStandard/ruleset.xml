<?xml version="1.0"?>
<ruleset name="Oscar PER Standard">
    <description>Coding standard for the Oscar technical team aligned with PER Coding Style 3.0.</description>

    <rule ref="PSR12"/>

    <config name="tab_width" value="4"/>

    <rule ref="OscarStandard.Files.StrictTypesDeclaration">
        <properties>
            <property name="allowMultipleDeclare" value="false"/>
        </properties>
    </rule>
    <rule ref="OscarStandard.Namespaces.UseGrouping"/>
    <rule ref="OscarStandard.Attributes.AttributePlacement"/>
</ruleset>
